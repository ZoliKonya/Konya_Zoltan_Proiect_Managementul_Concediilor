@page
@model Konya_Zoltan_Proiect_Managementul_Concediilor.Pages.Angajati.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Angajati</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Angajat[0].NrCrt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Angajat[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Angajat[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Angajat[0].Departament)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Angajat[0].Functie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Angajat[0].Adress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Angajat[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Angajat[0].Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Angajat)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NrCrt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Departament.NumeDepartament)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Functie.NumeFunctie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
